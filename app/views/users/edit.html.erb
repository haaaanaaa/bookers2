<div class="container">
<div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
   <%= form_with model:@user,url:user_path(@user), method: :patch, local:true do |f| %>

      <div class="form-group">
        <%= f.label :name, "Name" %>
      <div> <%= f.text_field :name%></div>
      </div>
     <div class="form-group">
        <%= f.label :profile_image , "Image" %>
      <div> <%= f.attachment_field :profile_image,placeholder: "プロフィール画像" %></div>
      </div>
      <div class="form-group">
        　<%= f.label :introduction, "Introduction" %>
         <div> <%= f.text_area :introduction %></div>
      </div>
      <div class="form-group">
        <%= f.submit "Update User" %>
      </div>
  <% end %>
  </div>
  </div>
  </div>














